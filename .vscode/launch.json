    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "name": "vscode-jest-tests",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/.bin/jest",
        "args": [
          "--runInBand",
          "--detectOpenHandles"
        ],
        "runtimeArgs": [
          //"${workspaceRoot}/node_modules/.bin/jest",
          "--inspect-brk"
        ],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "disableOptimisticBPs": true
      },
